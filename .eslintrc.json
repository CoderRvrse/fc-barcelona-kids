{
  "env": {
    "browser": true,
    "es2022": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-cond-assign": ["error", "always"],
    "no-unsafe-optional-chaining": "error",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }]
  }
}