{
  "name": "fc-barcelona-kids-website",
  "version": "1.0.0",
  "description": "FC Barcelona Kids Team Interactive Website",
  "scripts": {
    "clean": "rimraf dist && rimraf reports",
    "prepare:dist": "mkdirp dist/styles dist/scripts dist/assets reports",
    "minify:css": "cleancss -o dist/styles/main.css styles/main.css",
    "minify:js": "terser scripts/main.js -o dist/scripts/main.js -c -m",
    "copy:index": "cpx index.html dist",
    "copy:assets": "cpx \"assets/**/*\" dist/assets",
    "build": "npm run clean && npm run prepare:dist && npm run minify:css && npm run minify:js && npm run copy:index && npm run copy:assets",
    "dev": "live-server --port=3000 --open=/index.html --watch=.",
    "serve": "npm run dev",
    "test:lighthouse": "npm run prepare:dist && lighthouse http://localhost:3000 --output=html --output-path=./reports/lighthouse.html",
    "test:performance": "npm run test:lighthouse && start \"\" \"reports\\lighthouse.html\"",
    "test:responsive": "echo Testing responsive design - check multiple device sizes",
    "validate:html": "html-validate index.html",
    "validate:css": "stylelint styles/*.css",
    "validate:accessibility": "axe http://localhost:3000",
    "lint": "eslint ."
  },
  "devDependencies": {
    "axe-cli": "^4.7.0",
    "clean-css-cli": "^5.6.2",
    "cpx": "^1.5.0",
    "eslint": "^8.54.0",
    "html-validate": "^8.5.0",
    "lighthouse": "^11.0.0",
    "live-server": "^1.2.2",
    "mkdirp": "^3.0.1",
    "rimraf": "^5.0.5",
    "stylelint": "^15.11.0",
    "terser": "^5.19.4"
  }
}
